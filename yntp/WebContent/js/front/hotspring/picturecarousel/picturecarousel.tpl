<div class="zx_slider">
	<div class="imgbox">
		{{#each this.model.items}}
			<img id="{{this.imageid}}" alt="Danx"  width="750" height="310" />
		{{/each}}
	</div>
	
	<div class="png"></div>
	
	{{#each this.model.items}}
		<a href="#/" id="{{this.alinkid}}" class="hi_btn"></a>
	{{/each}}

	<div class="btnbox">
		{{#each this.model.items}}
			<a  class="btnboxa" index={{this.index}}>
				<img alt="Danx" id="{{this.btnimageid}}" 
				 {{#if this.active}}
			 		class="thumb img_hover"
			 	{{else}}
			 		class="thumb"
			 	{{/if}}  />
			</a>
		{{/each}}
	</div>
	
	<div class="lbtn"></div>
    <div class="rbtn"></div>
	
    <div class="slider_p">
    	{{#each this.model.items}}
    		<div id="{{this.sliderid}}" class="slider_p_div">
    			<h3>{{this.title}}</h3>
				<p>{{this.content}}</p>
    		</div>
			
		{{/each}}
    </div>
    
</div><!--zx_slider end-->
